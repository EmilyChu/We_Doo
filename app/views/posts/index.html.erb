<h1>Discussion Forum</h1>

<%= link_to 'Have something to add?', new_post_path %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr> 
      <th> Subject </th>
      <th> Posted </th>
      <th> Options </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= link_to p.title, post_path(p) %> </td>
        <td><%= p.created_at %> </td>
      
        <td><%= link_to 'Edit', edit_post_path(p) %></td>
        <td><%= link_to 'Remove', post_path(p),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>