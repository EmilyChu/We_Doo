<h1>Discussion Forum</h1>

<%= link_to 'Have something to add?', new_post_path %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr> 
            <th> Subject </th>
            <th> Date-Time Posted EST</th>
            <!-- <th> Options </th> -->
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= link_to p.title, post_path(p) %> </td>
              <td><%= p.created_at %> </td>
            
              <td><%= link_to edit_post_path(p) do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              </td>
              <td><%= link_to post_path(p), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <%= form_tag search_yelp_path, action: "search", method: "get" do %>
          <%# label :term #put in placeholder styling  %>
          <%= text_field_tag :term %><br>
          <%# label :category_filter #put in placeholder styling %>
          <%= text_field_tag :category_filter%><br>
          <%= text_field_tag :city%>
          <%= text_field_tag :state%><br>
          <!-- <i class="fa fa-yelp"></i> -->
        <button>Search Yelp for Ideas</button>
        <% end %>
        <div id="yelp_search_results"></div>
      </div>
    </div>
  </div>
</div>

<script type="application/javascript">
  var add_search_results = function(response) {
    console.log(response);
    var yelpHTML = '<ul class="bulleted">';
    $.each(response, function (index, result){
      yelpHTML += '<li>'+result.name+" "+result.address[0]+", "+result.address[1]+'</li>';
    });
    yelpHTML += '</ul>';
    $('#yelp_search_results').append(yelpHTML);
  };

  $(document).ready(function() {
    $('form').submit(function(e) {
      e.preventDefault();
      var url = $(this).attr("action");
      var formData = $(this).serialize();
      $.ajax(url, {
        data : formData,
        type: "GET",
        success: add_search_results
      });
    });
  });
</script>