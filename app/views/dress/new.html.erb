<div class="container">
<h2>Any Suggestions?</h2>

<%= form_for @dress, url: dress_index_path, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url %>
  </p>
  <p><%= f.submit "Upload Image"%></p>
<% end %>

<br>
<%= link_to "View Current Suggestions", dress_index_path %>

</div>
