<table>
  <thead>
    <tr>
      <th>Dress Moniker</th>
      <th>Dress Preview</th>
      <% if current_user %>
        <th>Vote</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= @dress.each do |d| %>
      <tr>
        <td><%= d.name %></td>
        <td><%= image_tag d.image_url(:thumb).to_s %></td>
        <td><%= d.votes.count %></td>
        <% if current_user %>
          <td><%= button_to "Vote", vote_dress_path(d), class: "btn btn-default" %></td>
        <% end %>
        <td>
          <% if d.favorites.count == 0  %>
            <%= button_to "Favorite", favorite_dress_path(d), class: "btn btn-default" %>
          <% else %>
            <button class="btn btn-success">Bride Favorited</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>