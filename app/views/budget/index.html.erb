<div class="container">
  <div class="row">
    <div class="col-md-5">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th><h2>Shared Expenses</h2></th>
          </tr>
        </thead>
        <tbody>
          <%= form_tag '/budget/update', action: :update, method: :patch do %>
          <% @budget.each do |b| %>
          <tr>
            <td><%= b.category %></td>
            <td><%= b.cost %></td>
            <td><input name="<%=b.category%>"</td>
            <td><%= link_to budget_path(b[:id]), action: :destroy, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash-o"></i>
            <% end %></td>
          <% end %>
          </tr>
          <tr>
            <td><strong>Total</strong></td>
            <td><% subtotal = @budget%>
              <% total = subtotal.map {|b| b.cost} %>
              <%= total.reduce(:+) %>
            </td>
            <td><button>Update</button></td></tr>
          <% end %>
          <tr>
          <%= form_tag budget_index_path, action: :create, method: :post do %>
            <td><%= text_field_tag :category, nil, placeholder: 'Category' %></td>
            <td><%= text_field_tag :cost, nil, placeholder: 'Cost' %></td>
            <td><button>Create</button></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="col-md-7">
      <img src='/cotton.jpg'>
    </div>
    
  </div>
</div>
