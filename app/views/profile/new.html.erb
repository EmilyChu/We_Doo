<div class="container">
  <div class="col-sm-5">
    <div class="row">
      <div class="page-header">
        <h2>We Do Profile: <small><%= current_user.name %></small></h2>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <p class="lead"><strong>Email: </strong><%= current_user.email %></p>
          <p class="lead"><strong>Hometown: </strong><%= current_user.hometown %></p>
          <p class="lead"><strong>Years you've known the bride: </strong><%= current_user.years %></p>
          
          <p class="lead"><%= current_user.story %></p>
          
          <div style="padding: 2em 0em;"> 
          <form method="get" action="/users/profile/edit"><button class="btn btn-info" type="submit">Edit Your Profile</button></form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>